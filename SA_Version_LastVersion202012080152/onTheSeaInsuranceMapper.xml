<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="onTheSeaInsuranceMapper">

   <!-- Beans 클래스의 객체이름(id)과 클래스이름(type)을 명시한다. -->
   <resultMap id="onTheSeaInsuranceMap" type="model_insurance.mOnTheSeaInsurance">
      <!-- Beans의 멤버변수(property)이름과 대상 테이블의 컬럼(column)을 연결한다. -->
      <result property="insuranceName" column="insuranceName" />
      <result property="subscriptionTarget" column="subscriptionTarget" />
      <result property="insurancePeriod" column="insurancePeriod" />
      <result property="insuranceMoney" column="insuranceMoney" />
      <result property="payIn" column="payIn" />
      <result property="specialSubscription" column="specialSubscription" />
      <result property="email" column="email" />
      <result property="accidentHistory" column="accidentHistory" />
      <result property="job" column="job" />
      <result property="longterm" column="longterm" />

   </resultMap>
   <resultMap id="onTheSeaInsuranceDesignMap" type="model_insurnaceDesinging.mInsuranceDesinging">
      <!-- Beans의 멤버변수(property)이름과 대상 테이블의 컬럼(column)을 연결한다. -->
      <result property="insuranceID" column="insuranceID" />
      <result property="insuranceName" column="insuranceName" />
      <result property="subscriptionTarget" column="subscriptionTarget" />
      <result property="payment" column="payIn" />
      <result property="insurancePeriod" column="insurancePeriod" />
      <result property="paymentMethod" column="paymentMethod" />
      <result property="insuranceMoney" column="insuranceMoney" />
      <result property="note" column="note" />
      <result property="specialSubscription" column="specialSubscription" />
      <result property="insuranceCategory" column="insuranceCategory" />
   </resultMap>
   <!-- 단일행 조회를 위한 기능 정의 -->
   <select id="InsertInfo" parameterType="model_insurance.mOnTheSeaInsurance" resultMap="onTheSeaInsuranceMap">
      SELECT * FROM insurance where insuranceCategory = #{insuranceCategory};
   </select>
   
   	<select id="findPayIn" parameterType="model_insurance.mOnTheSeaInsurance" resultMap="onTheSeaInsuranceMap">
    	select payIn from insurance where insuranceName = #{insuranceName};
    </select>

   <insert id="onTheSeaInsert" parameterType="model_insurnaceDesinging.mInsuranceDesinging" useGeneratedKeys="true" keyProperty="insuranceID">
             insert into insurance(insuranceName, subscriptionTarget, payIn, insurancePeriod, paymentMethod, insuranceMoney,specialSubscription,note,insuranceCategory)
       values(#{insuranceName},#{subscriptionTarget},#{payment},#{insurancePeriod},#{paymentMethod},#{insuranceMoney}, #{specialSubscription},#{note},#{insuranceCategory});
   </insert>

   <insert id="onTheSeaInsertClient" parameterType="model_insuranceRegistration.mOnTheSeaInsuranceRegistration">
      insert into onTheSeaInsuranceRegistrationInfo(
      insuranceName,name,
      residentRegistrationNumber, age, gender, phoneNumber,
      address,accountNumber, email, job, accidentHistory, longterm, RegistrationDate, onTheSeaInsuranceType, seaProperty, insuranceMoney, insuranceCategory
      ) values(
      #{insuranceName},#{name},#{residentRegistrationNumber},#{age},#{gender},#{phoneNumber},#{address},
      #{accountNumber}, #{email}, #{job}, #{accidentHistory}, #{longterm}, #{date}, #{selectOnTheSeaType}, #{selectBoatType}, #{totalPrice}, #{insuranceCategory});
   </insert>

</mapper>